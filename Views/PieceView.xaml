<UserControl x:Class="Check.Views.PieceView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vs="clr-namespace:Check.Views"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vs:PieceView, IsDesignTimeCreatable=False}">
    <Ellipse>
        <Ellipse.HorizontalAlignment>Stretch</Ellipse.HorizontalAlignment>
        <Ellipse.VerticalAlignment  >Stretch</Ellipse.VerticalAlignment  >
        <Ellipse.Fill>
            <Binding>
                <Binding.RelativeSource>
                    <RelativeSource Mode="FindAncestor" AncestorType="{x:Type vs:PieceView}" />
                </Binding.RelativeSource>
                <Binding.Path>Fill</Binding.Path>
            </Binding>
        </Ellipse.Fill>
        <Ellipse.Stroke>
            <Binding>
                <Binding.RelativeSource>
                    <RelativeSource Mode="FindAncestor" AncestorType="{x:Type vs:PieceView}" />
                </Binding.RelativeSource>
                <Binding.Path>Stroke</Binding.Path>
            </Binding>
        </Ellipse.Stroke>
    </Ellipse>
</UserControl>
